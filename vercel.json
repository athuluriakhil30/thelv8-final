{
  "crons": [
    {
      "path": "/api/orders/cleanup-abandoned",
      "schedule": "0 2 * * *"
    }
  ],
  "functions": {
    "app/api/razorpay/webhook/route.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "app/api/razorpay/create-order/route.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "app/api/orders/cleanup-abandoned/route.ts": {
      "memory": 512,
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/razorpay/webhook",
      "headers": [
        {
          "key": "Access-Control-Allow-Methods",
          "value": "POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, x-razorpay-signature"
        }
      ]
    }
  ]
}
